{
  "manifest_version": 2,
  "name": "Drone Build Button",
  "description": "A Chrome Extension to scrape a Github PR page and send a pull_request hook to a Drone server.",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequestBlocking",
    "*://*/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content_script.js"]
  }]
}
